{
  "name": "enterprise-employee-monitor",
  "version": "1.0.0",
  "description": "Employee Activity Tracker",
  "author": "Admin",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "start-tracker": "electron .",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.system.antivirus",
    "productName": "System Anti-Virus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "tracker.service.js",
      "package.json",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "include": "build/installer.nsh"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@mui/x-date-pickers": "^8.23.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.13.2",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
    "framer-motion": "^12.31.0",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-parallax-tilt": "^1.7.319",
    "react-router-dom": "^6.20.0",
    "react-toastify": "^9.1.3",
    "recharts": "^2.10.3",
    "screenshot-desktop": "^1.15.3",
    "socket.io-client": "^4.8.3",
    "uiohook-napi": "^1.5.4",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "vite": "^5.0.0"
  }
}
